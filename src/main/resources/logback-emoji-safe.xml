<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Emoji-Safe Console Appender for Windows compatibility -->
    <appender name="EMOJI_SAFE_CONSOLE" class="com.classroomapp.classroombackend.config.logging.EmojiSafeConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <charset>UTF-8</charset>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} -- %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Standard Console Appender with UTF-8 encoding (fallback) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <charset>UTF-8</charset>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} -- %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File Appender with UTF-8 encoding (keeps original emojis) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/classroom-backend.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <charset>UTF-8</charset>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} -- %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/classroom-backend.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Specific logger for our application -->
    <logger name="com.classroomapp" level="INFO" additivity="false">
        <appender-ref ref="EMOJI_SAFE_CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Hibernate SQL logging -->
    <logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
        <appender-ref ref="EMOJI_SAFE_CONSOLE"/>
    </logger>

    <!-- Hibernate type logging -->
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE" additivity="false">
        <appender-ref ref="EMOJI_SAFE_CONSOLE"/>
    </logger>

    <!-- Spring Security logging -->
    <logger name="org.springframework.security" level="DEBUG" additivity="false">
        <appender-ref ref="EMOJI_SAFE_CONSOLE"/>
    </logger>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="EMOJI_SAFE_CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

    <!-- Profile-specific configurations -->
    <springProfile name="local">
        <logger name="com.classroomapp" level="DEBUG"/>
    </springProfile>

    <springProfile name="dev">
        <logger name="com.classroomapp" level="DEBUG"/>
    </springProfile>

    <springProfile name="prod">
        <logger name="com.classroomapp" level="INFO"/>
        <logger name="org.hibernate.SQL" level="WARN"/>
        <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="WARN"/>
    </springProfile>

    <!-- Windows-specific configuration -->
    <springProfile name="windows">
        <logger name="com.classroomapp" level="DEBUG"/>
        <!-- Use emoji-safe appender for Windows -->
        <root level="INFO">
            <appender-ref ref="EMOJI_SAFE_CONSOLE"/>
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>

    <!-- Unix/Linux-specific configuration -->
    <springProfile name="unix">
        <!-- Use standard console appender for Unix systems -->
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>
</configuration>
